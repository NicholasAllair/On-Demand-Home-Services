<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RemoveServiceHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Enter Service to Remove"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            tools:fontFamily="sans-serif"
            tools:layout_margin="12dp" />

        <EditText
            android:id="@+id/ServiceToRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Service Name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/ServiceDoesNotExist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/ReturnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRemoveServiceClick"
            android:text="Remove Service and Return Home" />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>